<MudProgressLinear Color=@Color.Primary Rounded="true" Size="Size.Large" Style="transform: scaleY(2)" Value="@ProgressValue">
	<MudText Typo="Typo.subtitle2" Color="@Color.Surface" Style="transform: scaleY(0.5); color: white" Class="align-center">@Task</MudText>
</MudProgressLinear>

@code {
	[Parameter] public int ProgressValue { get; set; }
	[Parameter] public string Task { get; set; } = "";
}
